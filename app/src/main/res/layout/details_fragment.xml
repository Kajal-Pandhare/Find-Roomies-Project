<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff
"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="400dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/txtRoomDetails"
        android:text="Room Details"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/txtAddress"
            android:textSize="20sp"
            android:text="Address"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/edtAddress"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:hint="Enter Address"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/txtState"
            android:textSize="20sp"
            android:text="State"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtState"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:hint="Enter State"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/txtCountry"
            android:textSize="20sp"
            android:text="Country"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtCountry"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:hint="Enter Country"
            android:layout_width="135dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPincode"
                    android:textSize="20sp"
                    android:text="Pincode"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edtPincode"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:hint="Enter Pincode"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtLatitude"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="Latitude"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtlongitude"
                        android:textSize="20sp"
                        android:text="Longitude"
                        android:padding="2dp"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtMinAge"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="Minimum Age -"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtMinAge"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint="Enter Minimum Age"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtMaxAge"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="Maximum Age -"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtMaxAge"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint="Enter Maximum Age"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtOccupation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="Occupation -"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtOccupation"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint="student/job"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNoOfRoomates"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="no_of_roomMates_required"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtNoOfRoomates"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint=""
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtCurrentRoommates"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="no_of_current_roommates"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtDeposit"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint=""
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtFemaleRoommates"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="no_of_female_roommates"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtFemaleRoommates"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint=""
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtMaleRoommates"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="no_of_males_roommates"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtMaleRoommates"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint=""
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtFurnished"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="is_furnished"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edtFurnished"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:hint=""
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

<Button
    android:id="@+id/btnContact"
    android:text="Contact"
    android:textSize="20sp"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_gravity="center"
    android:layout_width="200dp"
    android:layout_height="wrap_content"/>
</LinearLayout>